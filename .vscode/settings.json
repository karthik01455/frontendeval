{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.tabSize": 2,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "javascript",
      "autoFix": true,
      "rules": {
        "no-inline-comments": "off"
      }
    },
    {
      "language": "javascriptreact",
      "autoFix": true,
      "rules": {
        "no-inline-comments": "off"
      }
    }
  ]
}
